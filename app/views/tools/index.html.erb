<div class="container">
	<div class='row'>
	<div class="col-md-3">
		<ul class="sidebar-list">
			<li class="sidebar-item"><%= link_to "Your Listing", tools_path, class: "sidebar-link active" %></li>
			<li class="sidebar-item"><%= link_to "Upcoming Reservations", your_reservations_path, class: "sidebar-link" %></li>
			<li class="sidebar-item"><%= link_to "Your Rentals", your_rentals_path, class: "sidebar-link" %></li>
		</ul>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Listings
			</div>
			<div class="panel-body">
				<% @tools.each do |tool| %>
					<div class="row">
						<div class="col-md-2">
							<%= image_tag tool.photos[0].image.url(:thumb) if tool.photos.length > 0 %>
						</div>
						<div class="col-md-7">
							<h4><%= tool.listing_name %></h4>
						</div>
						<div class="col-md-3 right">
							<%= link_to "Update", edit_tool_path(tool), class: "btn btn-primary" %>
						</div>

					</div>
					<hr>
				<% end %>
			</div>
		</div>
	</div>
</div>
	
</div>



