<div class="row"> 
	<div class="col-md-3">
		<div class="center">
			<%= image_tag avatar_url(@user), class: "avatar-full" %>
		</div>
	</div>
	<div class="panel panel-default">
		<div class="panel-heading">
		Verification
		</div>
		<div class="panel-body">
			Email Address<br>
			Phone Number
		</div>
	</div>
	<div class="col-md-9">
		<h2><%= @user.firstname %> <%= @user.lastname %></h2>

		<div class="description row-space-3">
			<%= @user.description %>
		</div>

		<h4>Listings</h4><br>

		<div class="row">
			<% @tools.each do |tool|%>
				<div class="col-md-4">
					<div class="panel panel-default">
						<div class="panel-heading preview">
							<%= image_tag tool.photos[0].image.url(:medium) %>
						</div>
						<div class="panel-body">
							<%= link_to tool.listing_name, tool_path(tool)%>
						</div>
						
					</div>
					
				</div>

			<% end %>
		</div>

	</div>
</div>