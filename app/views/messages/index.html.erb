<div class="container">
	<div class="row">
		<div class="col-md-3 text-center">
			<%#= image_tag avatar_url(@other), class: "img-circle avatar-medium" %>
			<strong><%= @other.firstname %></strong>
			<%= link_to "View Profile", @other, class: "btn btn-default wide" %>
		</div>
		<div class="col-md-9">
			<div class="panel panel default">
				<div class="panel heading">
					Conversations with <%= @other.firstname%>
				</div>
				<div class="panel-body">
					<div class="container">
						<%= form_for [@conversation, @conversation.messages.new] do |f| %>
							<div class="form-group">
								<%= f.text_area :content, id: "new_message", placeholder: "Send A Message, Don't Be Shy", class: "form-control"%>
							</div>
							<%= f.hidden_field :user_id, value: current_user.id %>

							<div class="actions">
								<%= f.submit "Send Message", class: "btn btn-primary" %>
							</div>
						<% end %>
					</div>
					
				</div>
			</div>

			<div id="chat">
				<%= render 'messages' %>
			</div>
		</div>


	</div>
</div>	